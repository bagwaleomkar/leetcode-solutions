class Solution {
    public boolean isArmstrong(int n) {
        int ld;
        int sum = 0;
        int org = n;

        while (n > 0) {
            ld = n % 10;
            sum = sum + (ld * ld * ld);
            n /= 10;
        }

        if (org == sum)
            return true;
        else
            return false;
    }
}
